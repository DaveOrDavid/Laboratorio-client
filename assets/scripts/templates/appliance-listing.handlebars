{{#each appliances as |appliance|}}
  {{log appliance}}
  <section data-id="{{appliance.id}}">
    <h6>ID:</h6>
    <div>
      <p>
      {{#if appliance.id}}
        {{appliance.id}}
      {{else}}
        No id provided.
      {{/if}}
    </p>
    </div>
    <h6>Part:</h6>
    <div>
      <p>
      {{#if appliance.part_number}}
        {{appliance.part_number}}
      {{else}}
        No part_number provided.
      {{/if}}
    </p>
    </div>
    <h6>Location:</h6>
    <div>
      <p>
      {{#if appliance.location}}
        {{appliance.location}}
      {{else}}
        No location provided.
      {{/if}}
    </p>
    </div>
    <h6>Image URL:</h6>
    <div>
      <p>
      {{#if appliance.image_url}}
        {{appliance.image_url}}
      {{else}}
        No url provided.
      {{/if}}
    </p>
    </div>
