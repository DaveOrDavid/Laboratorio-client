<!-- PATCH update-->
    <h6>Update Appliance</h6>
      <div class="message-box"></div>
        <form class="update-form" data-id="{{appliance.id}}">
          <input name="appliance[location]" value="" type="text" placeholder='Location' data-id="{{appliance.id}}" required>

          <input name="appliance[part_number]" value="" type="text" placeholder='Part Number' data-id="{{appliance.id}}" required>

          <input name="appliance[image_url]" value="" type="text" placeholder='Image URL' data-id="{{appliance.id}}" required>
          <input type="submit" data-id="" class="editButton btn btn-secondary" value="Update Appliance">
        </form>

<!-- DELETE destroy appliance -->
      <button type="button" data-id="{{appliance.id}}" class="btn btn-danger remove-appliance">Delete Appliance</button>


{{/each}}
